{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Raptor Manager",
    "version": "0.1.2",
    "identifier": "fun.raptor.manager",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "width": 640,
                "minWidth": 640,
                "height": 400,
                "minHeight": 400,
                "maxWidth": 640,
                "maxHeight": 400,
                "resizable": false,
                "fullscreen": false,
                "hiddenTitle": true,
                "titleBarStyle": "Overlay",
                "trafficLightPosition": {
                    "x": 0,
                    "y": -5
                },
                "acceptFirstMouse": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["dmg", "app"],
        "icon": ["icons/icon.icns", "icons/icon.icns"],
        "macOS": {
            "entitlements": "./Entitlements.plist"
        },
        "createUpdaterArtifacts": true
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkxRTVGNTBGODg5NUM3QjYKUldTMng1V0lEL1hsa1c0Z0ZpOThhRGlXNGtJck03RnhHSjhoUDRxSjZCZ1FlaERwS210cGJsRVkK",
            "endpoints": [
                "https://github.com/DollarNoob/Raptor-Manager/releases/latest/download/latest.json"
            ]
        }
    }
}
